{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Marker",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "offset_ms", "created_at", "source"],
  "properties": {
    "id": { "$ref": "#/$defs/ulid" },
    "offset_ms": { "$ref": "#/$defs/duration_ms" },
    "created_at": { "$ref": "#/$defs/rfc3339" },
    "source": { "type": "string", "enum": ["user", "system"] },
    "duration_ms": { "$ref": "#/$defs/duration_ms" },
    "label": { "type": "string" },
    "note": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "$ref": "#/$defs/tag" }
    },
    "voice_note_id": { "$ref": "#/$defs/ulid" }
  },
  "$defs": {
    "ulid": {
      "type": "string",
      "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$"
    },
    "rfc3339": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(\\.[0-9]+)?Z$"
    },
    "duration_ms": {
      "type": "integer",
      "minimum": 0
    },
    "tag": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9_-]*$"
    }
  }
}
