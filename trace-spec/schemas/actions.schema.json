{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Action Run",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "action", "created_at", "status"],
  "properties": {
    "id": { "$ref": "#/$defs/ulid" },
    "action": { "type": "string" },
    "created_at": { "$ref": "#/$defs/rfc3339" },
    "status": { "type": "string", "enum": ["started", "succeeded", "failed"] },
    "inputs": { "type": "object" },
    "outputs": { "type": "object" },
    "error": { "type": "string" }
  },
  "$defs": {
    "ulid": {
      "type": "string",
      "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$"
    },
    "rfc3339": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(\\.[0-9]+)?Z$"
    }
  }
}
