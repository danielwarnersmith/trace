{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Transcript Segment",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "offset_ms", "duration_ms", "text"],
  "properties": {
    "id": { "$ref": "#/$defs/ulid" },
    "offset_ms": { "$ref": "#/$defs/duration_ms" },
    "duration_ms": { "$ref": "#/$defs/duration_ms" },
    "text": { "type": "string" },
    "speaker": { "type": "string" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
  },
  "$defs": {
    "ulid": {
      "type": "string",
      "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$"
    },
    "duration_ms": {
      "type": "integer",
      "minimum": 0
    }
  }
}
